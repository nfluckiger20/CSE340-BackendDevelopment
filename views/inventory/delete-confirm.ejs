<!-- content heading -->
<% if (title) { %>
    <h1 id="centered"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<% if (locals.errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>

<form id="updateForm" action="/inv/goneForever" method="post">
    <p>All inputs are required.</p>
    <div id="center-form-content">

        <label id="manage" for="inventory_form">Make</label><br>
        <input type="text" id="inventory_form" name="inventory_form" pattern="[A-Za-z]{3,}" required value="<%= locals.inv_make%>"><br>
        
        <label id="manage" for="inventory_form">Model</label><br>
        <input type="text" id="inventory_form" name="inventory_form" pattern="[A-Za-z]{3,}" required value="<%= locals.inv_model%>"><br>
        
        <label id="manage" for="inventory_form">Description</label> <br>
        <textarea id="inventory_form" name="inventory_form" required ><%= locals.inv_description%></textarea><br>
        
        <label id="manage" for="inventory_form">Image:</label><br>
        <input type="text" id="inventory_form" name="inventory_form" required value="<%= locals.inv_image%>"><br>
        
        <label id="manage" for="inventory_form">Thumbnail:</label><br>
        <input type="text" id="inventory_form" name="inventory_form" required value="<%= locals.inv_thumbnail%>"><br>
        
        <label id="manage" for="inventory_form">Price:</label><br>
        <input type="text" id="inventory_form" pattern="[0-9.]*" name="inventory_form" placeholder="Please only use integers or decimals"required value="<%= locals.inv_price%>"><br>
       
        <label id="manage" for="inventory_form">Year:</label><br>
        <input type="text" id="inventory_form" name="inventory_form" minlength="4" maxlength="4" required value="<%= locals.inv_year%>"><br>
       
        <label id="manage" for="inventory_form">Miles:</label><br>
        <input type="text" id="inventory_form" name="inventory_form" pattern="[0-9.]*" placeholder="Please only use integers or decimals" required value="<%= locals.inv_miles%>"><br>
        
        <label id="manage" for="inventory_form">Color:</label><br>
        <input type="text" id="inventory_form" name="inventory_form" required value="<%= locals.inv_color%>"><br>    

        <p>Confirm Deletion - The delete is permanent.</p>
        <input readonly type="submit" id="submit" name="submit" value="Delete Vehicle">

        <input  type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>
        >
    </div>
</form>
