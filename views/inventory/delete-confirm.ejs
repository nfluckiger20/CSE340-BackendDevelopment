<!-- content heading -->
<% if (title) { %>
    <h1 id="centered"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>

<form id="updateForm" action="/inv/goneForever" method="post">
    <p>All inputs are required.</p>
    <div id="center-form-content">

        <label class="required" for="inv_make">Make</label><br>
        <input readonly type="text" id="inv_make" name="inv_make" placeholder="MIN 3 Characters" pattern="[A-Za-z]{3,}" required value="<%= locals.inv_make%>"><br>

        <label class="required" for="inv_model">Model</label><br>
        <input readonly type="text" id="inv_model" name="inv_model" placeholder="MIN 3 Characters" pattern="[A-Za-z]{3,}" required value="<%= locals.inv_model%>"><br>

        <label class="required" for="inv_price">Price</label><br>
        <input readonly type="text" id="inv_price" pattern="[0-9.]*" name="inv_price" placeholder="integer or decimal"required value="<%= locals.inv_price%>"><br>

        <label class="required" for="inv_year">Year</label><br>
        <input readonly type="text" id="inv_year" name="inv_year" minlength="4" maxlength="4" pattern="[0-9]{4}" placeholder="4 digit year" required value="<%= locals.inv_year%>"><br>

        <p>Confirm Deletion - The delete is permanent.</p>
        <input readonly type="submit" id="submit" name="submit" value="Delete Vehicle">

        <input  type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>
        >
    </div>
</form>
