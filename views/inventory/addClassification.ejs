<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Handle errors -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<%- messages() %>
  
    <form id="classification_form" method="post">
        <fieldset>
        <label for="classification_name">
            Classification Name: <br>
            <label for="classification_name">Name:</label>
            <input type="text" name="classification_name" id="classification_name" pattern="[a-zA-Z]+" required> <br>
            <button type="submit">Submit</button>
        </label>
        </fieldset> 
    </form>

   