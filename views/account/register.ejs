<!-- Register form -->

<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <% if (locals.message) { %>
    <div class="flash-message">
      <p><%= message %></p>
    </div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form action="/account/register" method="POST">
    <label for="account_firstname">First Name:</label>
    <input type="text" id="reg_fname" name="account_firstname" required value="<%= locals.account_firstname %>"><br><br>

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="reg_lname" name="account_lastname" required value="<%= locals.account_firstname %>"><br><br>

    <label for="account_email">Email:</label>
    <input type="email" id="reg_email" name="account_email" required value="<%= locals.account_firstname %>" placeholder="Enter a valid email address"><br><br>

    <label for="account_password">Password:</label>
    <span><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span></i> <br>
    <input type="password" id="reg_password" name="account_password" required pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9]).{12,}$"
      title="Password must be at least 12 characters long. Include 1 capital letter, 1 number, and 1 special character."><br><br>

    <button type="submit">Register</button>
  </form>

</body>
</html>
