<!-- Register form -->

<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <% if (message) { %>
    <div class="flash-message">
      <p><%= message %></p>
      <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    </div>
  <% } %>

  <form action="/account/register" method="POST">
    <label for="account_first_name">First Name:</label>
    <input type="text" id="form_css" name="account_first_name" required value="<%= locals.account_firstname %>">>

    <label for="account_last_name">Last Name:</label>
    <input type="text" id="form_css" name="account_last_name" required value="<%= locals.account_firstname %>">>

    <label for="account_email">Email:</label>
    <input type="email" id="form_css" name="account_email" required value="<%= locals.account_firstname %>" placeholder="Enter a valid email address">>

    <label for="account_password">Password:</label>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="password" id="form_css" name="account_password" required
      pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9]).{12,}$"
      title="Password must be at least 12 characters long. Include 1 capital letter, 1 number, and 1 special character.">

    <button type="submit">Register</button>
  </form>

</body>
</html>
