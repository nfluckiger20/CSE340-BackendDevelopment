<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<% if (locals.message) { %>
  <div notice="flash-message">
    <p><%= message %></p>
  </div>
<% } %>

<% if (locals.errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>


<form action="/account/updateAccount" method="POST">
    <label for="account_firstname">First Name:</label>
    <input type="text" id="reg_fname" name="account_firstname" required value="<%= locals.accountData.account_firstname %>"><br><br>

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="reg_lname" name="account_lastname" required value="<%= locals.accountData.account_lastname %>"><br><br>

    <label for="account_email">Email:</label>
    <input type="email" id="reg_email" name="account_email" required value="<%= locals.accountData.account_email %>" placeholder="Enter a valid email address"><br><br>

    <button type="submit" disabled >Update</button>
  </form>

  <form action="/account/updateAccount" method="POST">
  <label for="account_password">Change password:</label>
  <span><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span></i> <br>
  <input type="password" id="reg_password" name="account_password" required pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9]).{12,}$">
    
  <button type="submit">Change Password</button>
</form>
 